. gear-sh-functions

specfile=
rules="${RULES:-.gear-rules}"
tree_id=${TREE_ID:-HEAD}
commitlog=

workdir=
exit_handler()
{
    local rc=$?
    trap - EXIT
    [ -z "$workdir" ] || rm -rf -- "$workdir"
    exit $rc
}

print_version()
{
	cat <<EOF
$PROG version $PROG_VERSION
Written by Alexey Gladkov <legion@altlinux.org>

Copyright (C) 2006  Alexey Gladkov <legion@altlinux.org>
Copyright (C) 2006  Dmitry V. Levin <ldv@altlinux.org>
This is free software; see the source for copying conditions.  There is NO
warranty; not even for MERCHANTABILITY or FITNESS FOR A PARTICULAR PURPOSE.
EOF
	exit
}

if [ "$*" = '--version' ]; then
	print_version
elif [ "$*" = '--help' ]; then
	git-commit --help |
		sed "s|\(/usr/bin/\)\?git-commit|$PROG|g"
	exit
elif git-cat-file -t "$tree_id" >/dev/null 2>&1; then
    trap exit_handler HUP INT QUIT TERM EXIT
    workdir="$(mktemp -dt "$PROG.XXXXXXXXXX")"

    # Get specfile from archive.
    find_specfile
    cd "$(git-rev-parse --show-cdup)"

    rm -rf -- "$workdir"
    trap - HUP INT QUIT TERM EXIT
    unset rules tree_id workdir
else
    cd "$(git-rev-parse --show-cdup)"
    specfile="$(set +f; find_specfile_in_cwd '' *)" ||:
fi

if [ -f "$specfile" ]; then
    vr="$(sed -ne '/^[[:space:]]*%changelog[[:space:]]*$/{n; s/\* .* \([^[:space:]]\+\)$/\1/p}' "$specfile")"
    ch="$(sed -ne '0,/^[[:space:]]*%changelog[[:space:]]*$/d;2,/^* /{/^* /!p}' "$specfile")"
    commitlog="${vr:+$vr}

$ch"
    unset ch vr specfile
fi

exec git-commit ${commitlog:+-m "$commitlog" --edit} "$@"
